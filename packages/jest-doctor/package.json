{
  "name": "jest-doctor",
  "version": "2.0.5",
  "description": "Custom Jest environment that detects async leaks between tests, enforces test isolation, and prevents flaky failures in CI.",
  "license": "MIT",
  "author": "Stephan Dum",
  "type": "commonjs",
  "homepage": "https://stephan-dum.github.io/jest-doctor/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stephan-dum/jest-doctor.git",
    "directory": "packages/jest-doctor"
  },
  "exports": {
    "./package.json": "./package.json",
    "./createEnvMixin": "./dist/createEnvMixin.js",
    "./env/node": "./dist/env/node.js",
    "./env/jsdom": "./dist/env/jsdom.js",
    "./reporter": "./dist/reporter.js"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "jest",
    "jest-doctor",
    "leak detection",
    "open handles",
    "issue detection",
    "testing",
    "jest environment",
    "test hygiene",
    "flaky-tests",
    "test-isolation",
    "async-leaks",
    "developer-tools",
    "ci",
    "test diagnostics"
  ],
  "types": "./dist/types.d.ts",
  "devDependencies": {
    "@dev/eslint": "1.0.0",
    "@dev/tsconfig": "1.0.0",
    "@jest/reporters": "30.2.0",
    "@swc/core": "^1.15.11",
    "@swc/jest": "^0.2.39",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/cross-spawn": "^6.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "c8": "^10.1.3",
    "cross-spawn": "^7.0.6",
    "eslint": "^9.39.2",
    "jest": "30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-environment-node": "^30.2.0",
    "memfs": "^4.56.10",
    "nyc": "^17.1.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "shx": "^0.4.0",
    "ts-jest": "^29.4.6",
    "typescript": "5.9.3"
  },
  "peerDependencies": {
    "jest": ">=28",
    "jest-environment-jsdom": "*",
    "jest-environment-node": "*"
  },
  "peerDependenciesMeta": {
    "jest-environment-jsdom": {
      "optional": true
    },
    "jest-environment-node": {
      "optional": true
    }
  },
  "dependencies": {
    "chalk": "4.1.2",
    "zod": "^4.3.6"
  },
  "scripts": {
    "prepare:publish": "shx rm -fR dist && yarn build && npm login && npm publish",
    "typecheck": "tsc",
    "build": "tsc --project tsconfig.build.json",
    "dev": "yarn typecheck --watch & yarn build --watch",
    "lint": "eslint .",
    "test:unit": "jest --coverage",
    "test:matrix": "node ./e2e/runMatrix.mjs",
    "test": "yarn matrix && yarn test:unit && yarn coverage:merge",
    "coverage:merge": "nyc report"
  }
}
