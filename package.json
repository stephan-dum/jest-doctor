{
  "private": true,
  "license": "MIT",
  "type": "module",
  "workspaces": [
    "./packages/*",
    "./packages/**"
  ],
  "scripts": {
    "dev": "yarn workspace jest-doctor run dev",
    "build": "yarn workspace jest-doctor run build",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "yarn workspaces foreach --all --parallel run lint",
    "test:unit": "yarn workspace jest-doctor run test:unit",
    "test:matrix": "yarn workspace jest-doctor run test:matrix",
    "test": "yarn workspace jest-doctor run test",
    "coverage:merge": "yarn workspace jest-doctor run coverage:merge"
  },
  "devDependencies": {
    "prettier": "^3.8.1"
  },
  "packageManager": "yarn@4.9.4",
  "resolutions": {
    "@jest/types": "30.2.0"
  }
}
